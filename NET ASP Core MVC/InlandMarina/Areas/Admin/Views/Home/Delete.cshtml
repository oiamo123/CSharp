@model InlandMarinaData.Slip

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Slip</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Width:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Width) FT
        </dd>
        <dt class = "col-sm-2">
            Length:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Length) FT
        </dd>
        <dt class = "col-sm-2">
            Dock: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DockID)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ID" />
        <div class="buttons">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-primary" asp-area="" asp-controller="Slips" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
